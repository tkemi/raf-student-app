<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Spinner
            android:id="@+id/spinner_schedule_fragment_group"
            android:layout_width="180dp"
            android:layout_height="45dp">

        </Spinner>

        <Spinner
            android:id="@+id/spinner_schedule_fragment_day"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp">

        </Spinner>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_schedule_fragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/filter"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_schedule_fragment_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_search_schedule_fragment"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:text="@string/btnSearch"
            android:textSize="10sp"
            android:background="@drawable/rounded_shape">

        </com.google.android.material.button.MaterialButton>



    </LinearLayout>

</LinearLayout>